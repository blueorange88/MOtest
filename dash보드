<div class="overlay" id="overlay"></div>
<div class="popup" id="popupRange">
  <h3>시간 범위 설정</h3>
  <p>팝업이 잘 뜹니다.</p>
  <button onclick="closePopup()">닫기</button>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.getElementById('headerCurr');
    if (header) header.addEventListener('click', openRangePopup);
  });

  function openRangePopup() {
    document.getElementById('popupRange').style.display = 'block';
    document.getElementById('overlay').style.display = 'block';
  }

  function closePopup() {
    document.getElementById('popupRange').style.display = 'none';
    document.getElementById('overlay').style.display = 'none';
  }
</script>

